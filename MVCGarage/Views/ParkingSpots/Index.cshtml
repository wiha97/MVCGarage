@model IEnumerable<MVCGarage.Models.ParkingSpot>

@{
    ViewBag.Title = "Index";
}
<div class="header jumbotron">
    <h1>Parking spots</h1>
    <hr />
    <p>This is the list of available parking spots</p>
</div>

<p style="font-size: 2em; text-align: center;">
    @Html.ActionLink("Create a new parking spot", "Create")
</p>
<div class="index-table">
    <table>
        <tr>
            <th>
                @Html.DisplayName("Available?")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.VehicleID == null)
                {
                        @Html.DisplayName("Yes")
                    }
                    else
                    {
                        @Html.DisplayName("No")
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Label)
                </td>
                <td>
                    @Html.DisplayName(MVCGarage.Models.EnumHelper.GetDescriptionAttr(item.VehicleType))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                    @if (item.VehicleID == null)
                    {
                        <text> |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </text>
                    }
                </td>
            </tr>
        }

    </table>
</div>
